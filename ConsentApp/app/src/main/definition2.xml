<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relView"
    android:background="#E0D2E7"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_above="@+id/placeholder"
        android:gravity="center"
        android:layout_marginBottom="75dp"
        android:id="@+id/the_defintion"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/placeholder"/>


    <ImageButton
        android:layout_width="100dp"
        android:id="@+id/video"
        android:layout_height="70dp"
        android:layout_toLeftOf="@+id/placeholder2"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/placeholder"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/placeholder2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeholder"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_toRightOf="@+id/placeholder2"
        android:layout_marginLeft="30dp"
        android:id="@+id/video2"
        android:layout_height="75dp"
        android:layout_below="@+id/placeholder"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video"
        android:layout_marginTop="10dp"
        android:text="These are videos that delve into this topic. Click on the thumbnails above to see them."
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>