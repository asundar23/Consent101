<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFCCCC"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:id="@+id/sexualassault"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:text="Sexual Assault"/>

    <Button
        android:layout_width="match_parent"
        android:layout_above="@+id/sexualassault"
        android:layout_marginBottom="10dp"
        android:id="@+id/stalking"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="Stalking"/>

    <Button
        android:layout_width="match_parent"
        android:layout_above="@+id/stalking"
        android:layout_marginBottom="10dp"
        android:id="@+id/harrassment"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:text="Harassment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/sexualassault"
        android:layout_marginTop="10dp"
        android:id="@+id/rape"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:text="Rape"/>

    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/rape"
        android:layout_marginTop="10dp"
        android:id="@+id/empoweredbystander"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:text="Empowered Bystander"/>

</RelativeLayout>