<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/placeholder2"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:text=""/>
    
    <TextView
        android:id="@+id/placeholder"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_above="@+id/placeholder2"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text=""/>

    <ImageButton
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:background="#00000000"
        android:layout_above="@+id/placeholder"
        android:id="@+id/what_is_consent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/what_is_consent"/>

    <ImageButton
        android:layout_width="47dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/placeholder"
        android:layout_toRightOf="@+id/placeholder"
        android:background="#00000000"
        android:id="@+id/statistics"
        android:layout_centerHorizontal="true"
        android:src="@drawable/statistics"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/placeholder"
        android:layout_alignLeft="@+id/placeholder"
        android:background="#00000000"
        android:id="@+id/consent_laws"
        android:src="@drawable/consent_laws"/>
    
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/consent_laws"
        android:layout_marginTop="10dp"
        android:id="@+id/myths_and_facts"
        android:src="@drawable/maf"
        android:layout_centerHorizontal="true"
        android:background="#00000000"/>
    
    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/links"
        android:background="#00000000"
        android:src="@drawable/something"/>

    <ImageButton
        android:layout_width="125dp"
        android:id="@+id/hotlines"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:src="@drawable/something_else"/>


</RelativeLayout>
