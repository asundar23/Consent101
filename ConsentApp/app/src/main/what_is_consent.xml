<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFCCCC"
    android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/sexual_harrasment_ribbon"
        android:id="@+id/imageView2" />


    <Button
        android:id="@+id/whyisconsentimportant"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:text="Why is Consent important?"/>

    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/whyisconsentimportant"
        android:layout_marginTop="30dp"
        android:id="@+id/criteriaofconsent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="Criteria of Consent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_below="@+id/criteriaofconsent"
        android:layout_marginTop="30dp"
        android:id="@+id/definitions"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="Definitions"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/definitions"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/swirl"/>


</RelativeLayout>
</ScrollView>